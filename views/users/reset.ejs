<%- include ("../partials/header") %>

<div class="ui centered  grid">
    <div class="row">
        <div class="eight wide column">
            <form class="ui form" action="/reset/<%= token %>" method="POST">
                <div class="ui item">
                    <h1 class="ui centered header">
                        New Password
                    </h1>
                </div>
                <div class="ui hidden divider"></div>                
                <div class="field">
                    <label for="password">Password (One number, one letter, one special character, at least eight total)</label>
                    <input required="true" type="password" pattern="[0-9a-zA-Z!@#$%^&*+]{8,20}" placeholder="Password" name="password">
                </div>
                <div class="field">
                    <label for="confirm">Confirm Password</label>
                    <input required="true" type="password" name="confirm" placeholder="Confirm Password">
                </div>
                <input class="ui centered secondary big basic button" type="submit" value="Update Password">
            </form>
        </div>
    </div>
</div>

</div>
<%- include ("../partials/footer") %>