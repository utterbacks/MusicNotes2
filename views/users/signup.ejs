<%- include ("../partials/header") %>

 <div class="ui centered grid">
        <div class="row">
            <div class="eight wide column">
                <form class="ui centered form" action="/signup" method="POST">
                    <div class="ui item">
                        <h1 class="ui centered header">
                            Sign Up
                        </h1>
                    </div>
                    <div class="ui hidden divider"></div>
                    <div class="field">
                        <label for="username">First Name</label>
                        <input required="true" type="text" placeholder="First Name" name="username">
                    </div>
                    <div class="field">
                        <label for="lastName">Last Name</label>
                        <input required="true" type="text" name="lastName" placeholder="Last Name">
                    </div>
                    <div class="field">
                        <label for="email">Email</label>
                        <input required="true" type="email" placeholder="Email" name="email">
                    </div>
                    <div class="field">
                        <label for="password">Password (minimum 8 letters and numbers)</label>
                        <input required="true" type="password" pattern="[0-9a-zA-Z]{8,20}" placeholder="Password" name="password">
                    </div>
                    <div class="field">
                        <label for="adminCode">For Teachers</label>
                        <input type="password" placeholder="Admin Code" name="adminCode">
                    </div>
                    <input class="ui secondary big basic button" type="submit" value="Let's Get Started">
                </form> 
            </div>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>