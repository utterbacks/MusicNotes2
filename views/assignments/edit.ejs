<%- include ("../partials/header") %>

    <div class="ui centered 16 grid">

        
        <form class="ui form" action="/student/<%= student._id %>/assignments/<%= assignment._id%>?_method=PUT" method="POST">
            <div class="ui item">
                <h1 class="ui header">
                    Edit Assignment
                </h1>
            </div>
            <div class="ui hidden divider"></div>
            <div class="field">
                <label for="title">Title:</label>
                <input type="text" name="assignment[title]" value="<%= assignment.title %>">
            </div>
            <div class="field">
                <label for="content">What to practice?</label>
                <textarea name="assignment[content]" cols="50" ><%= assignment.content %></textarea>
            </div>
            <input class="ui secondary big basic button" type="submit" value="Submit">
        </form>
        </div>
    </div>
</div>

<script>
    tinymce.init({
      selector: 'textarea',
      plugins: '  casechange formatpainter linkchecker autolink lists checklist media mediaembed   powerpaste  tinycomments tinymcespellchecker',
      toolbar: ' addcomment showcomments casechange checklist  formatpainter   ',
      toolbar_mode: 'floating',
      tinycomments_mode: 'embedded',
      tinycomments_author: 'Author name',
    });
  </script>


